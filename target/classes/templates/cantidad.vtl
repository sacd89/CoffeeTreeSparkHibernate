<form method="post" class="datos" action="/addCantidad/$id">
    <div class="form-group">
      <label for="cantidad">Cantidad</label>
      <input type="text" class="form-control" id="cantidad" name="cantidad" placeholder="Introduzca la cantidad">
      <input type="hidden" class="form-control" id="productId" name="productId" value="$id"></input>
    </div>
      <button type="submit" class="btn btn-success btn-block">OK</button>
</form>

